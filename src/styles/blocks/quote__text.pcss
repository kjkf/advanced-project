.quote__text {
	font-family: 'OpenSansSemiBold', Helvetica, Arial, sans-serif;
	font-weight: 400;
	font-size: 16px;
	line-height: 30px;
	opacity: .5;
	position: relative;
	margin-bottom: 25px;

	&:before {
		position: absolute;
		top: 0;
		left: -80px;
		content: "";
		display: inline-block;
		width: 80px;
		height: 70px;
		background: svg-load('quote.svg', fill=$text-color, width=100%, height=100%) 0 0 no-repeat;
		opacity: .3;
	}
}