.copyright {
	display: flex;
	justify-content: flex-start;
	align-items: flex-start;
}

.copyright__year {
	margin-right: 50px;
	font-size: 48px;
	line-height: 1;
	font-weight: 400;
	opacity: .1;
}

.copyright__username {
	font-size: 18px;
	line-height: 1.5;
	font-weight: 800;
	text-transform: uppercase;
	margin-bottom: 20px;
}

.copyright__desc {
	width: 150px;
}

.copyright__text {
	font-size: 16px;
	line-height: 30px;
	opacity: .15;
}